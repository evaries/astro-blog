---
import Desktop from "@/components/process/Desktop";
import Mobile from "@/components/process/Mobile";
import PageLayout from "@/layouts/Base";

import "@fontsource/inknut-antiqua/800.css";

import { getLangFromUrl, useTranslations } from "@/i18n";

const meta = {
	title: "Process",
	description: "How I get work done",
};

export function getStaticPaths() {
	return [{ params: { lang: "en" } }, { params: { lang: "uk" } }];
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<PageLayout meta={meta}>
	<div class="space-y-6">
		<h1 class="title text-center">{t("process.title")}</h1>
		<p class="text-center">{t("process.des")}</p>
	</div>
	<Desktop />
	<Mobile />
</PageLayout>
